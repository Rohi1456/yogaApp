<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentHome"
    android:layout_gravity="center"
    android:background="@color/yash">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <android.support.design.card.MaterialCardView
        android:id="@+id/dateCVID"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="#ff8a65"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                android:id="@+id/dateTVID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:text="Date"
                android:drawableTop="@drawable/ic_calendar"
                android:drawablePadding="5dp"
                android:gravity="center" />

        </RelativeLayout>
    </android.support.design.card.MaterialCardView>


    <android.support.design.card.MaterialCardView
        android:id="@+id/activeStudentsCVID"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="#90a4ae"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                android:id="@+id/feegotTVID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffff"
                android:text="Active Students"
                android:gravity="center" />
            <ProgressBar
                android:id="@+id/activePBID"
                android:progressDrawable="@drawable/green_layout_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@android:color/white"
                android:layout_marginTop="10dp"
                android:indeterminate="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"/>
            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Black
                android:id="@+id/activeStudentsTVID"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:layout_below="@id/feegotTVID"
                android:gravity="center"
                android:text="000"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

    </android.support.design.card.MaterialCardView>
    <android.support.design.card.MaterialCardView
        android:id="@+id/feeCVID"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                android:id="@+id/ActiveStudents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:text="Make Payment"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_pay_rupee"
                android:gravity="center" />

        </RelativeLayout>
    </android.support.design.card.MaterialCardView>

</LinearLayout>
</FrameLayout>