<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yash"
    tools:targetApi="lollipop">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_bg"
            android:elevation="10dp"
           >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yoga"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_toLeftOf="@id/logo"

                    />
                <ImageView
                    android:id="@+id/logo"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_yoga"/>
                <ImageView
                    android:id="@+id/backADDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_left_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_margin="20dp"
       >
        <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Bold
            android:id="@+id/title_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new className"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="30dp"/>

        <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Black
            android:id="@+id/calssText"
            android:layout_below="@id/title_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="className"
            android:textSize="15dp"/>
        <appliedsyntax.io.yoga.customfonts.EditText_Roboto_Light
            android:layout_below="@id/calssText"
           android:id="@+id/BatchNameETID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write class name"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/et_bg"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_id_card2"
            android:elevation="5dp"/>
        <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Black
            android:id="@+id/locationText"
            android:layout_below="@id/BatchNameETID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>
        <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
            android:layout_below="@id/locationText"
            android:id="@+id/BatchLocationETID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select location name"
            android:layout_marginLeft="10dp"
            android:background="@drawable/et_bg"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_pin"
            android:elevation="5dp"/>

        <appliedsyntax.io.yoga.customfonts.Button_Roboto_Medium
            android:id="@+id/add_BatchIMVID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom|center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_bg"
            />
        <ProgressBar
            android:id="@+id/BatchPBID"
            android:layout_width="match_parent"
            android:layout_height="46.5dp"
            android:text="Add"
            android:visibility="gone"
            android:padding="5dp"
            android:progressTint="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom|center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_bg"
            />
    </RelativeLayout>
    </RelativeLayout>
