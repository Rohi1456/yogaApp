<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/close_LVBatch"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_close"
        android:drawableRight="@drawable/ic_close"/>

    <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
        android:id="@+id/title_listTVID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Classes"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/load_batches_PBID"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        />
    <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
        android:id="@+id/search_error_TVID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search results not found"
        android:gravity="center"
        android:visibility="gone"/>

<View
    android:id="@+id/top_lineVID"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/colorAccent"
    android:layout_marginTop="10dp"
    android:visibility="gone"
    />
    <ListView
        android:id="@+id/selectBatchLV"
        android:layout_width="match_parent"
        android:dividerHeight="0.5dp"
        android:divider="@color/colorAccent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/bottom_line_VID"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />
</LinearLayout>
