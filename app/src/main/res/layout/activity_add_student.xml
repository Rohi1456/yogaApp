<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/yash">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_bg"
        android:elevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                android:id="@+id/titleTVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Student"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/logo"

                />

            <ImageView
                android:id="@+id/backADDS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_left_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:id="@+id/studentLLID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            android:layout_margin="15dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profileIVID"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/default_image"
                android:layout_marginBottom="30dp"
                app:civ_border_width="0dp"
                />
            <appliedsyntax.io.yoga.customfonts.EditText_Roboto_Light
                android:layout_below="@id/calssText"
                android:id="@+id/mobileNumberETID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:background="@drawable/et_bg"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_phone_call"
                android:elevation="2dp"/>
            <appliedsyntax.io.yoga.customfonts.EditText_Roboto_Light
                android:layout_below="@id/locationText"
                android:id="@+id/nameETID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:textSize="15dp"
                android:background="@drawable/et_bg"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_user"
                android:elevation="2dp"/>
            <appliedsyntax.io.yoga.customfonts.EditText_Roboto_Light
                android:layout_below="@id/locationText"
                android:id="@+id/ageETID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:textSize="15dp"
                android:background="@drawable/et_bg"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_user"
                android:elevation="2dp"/>
            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                android:layout_below="@id/locationText"
                android:id="@+id/batchETID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="className"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:background="@drawable/et_bg"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/id_unselected"
                android:elevation="2dp"/>
            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                android:layout_below="@id/locationText"
                android:id="@+id/fee_payETID"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FeePay"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:background="@drawable/et_bg"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_hand"
                android:elevation="2dp"/>
            <appliedsyntax.io.yoga.customfonts.MyTextView_Roboto_Light
                android:layout_below="@id/locationText"
                android:id="@+id/ActiveTVID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FeePay"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:background="@drawable/active_bg"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:elevation="3dp"
                android:layout_marginTop="10dp" />

            <appliedsyntax.io.yoga.customfonts.Button_Roboto_Medium
                android:id="@+id/add_studentIMVID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom|center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_bg"
                />
            <ProgressBar
                android:id="@+id/add_studentPBVID"
                android:layout_width="match_parent"
                android:layout_height="46.5dp"
                android:text="Add"
                android:elevation="3dp"
               android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:layout_marginTop="110dp"
                android:progressTint="@android:color/white"
                android:layout_gravity="bottom|center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_bg"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
